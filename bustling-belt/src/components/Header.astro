---
import { SkipLinks } from "accessible-astro-components";
import Logo from "./Logo.astro";
import Nav from "./Nav.astro";

const { current = "" } = Astro.props;
---

<header>
  <SkipLinks />
  <Logo />
  <Nav current={current} />
</header>

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }
</style>
